            <button onclick="applyDiscount()">Apply</button>
            <p id="discountMessage"></p>
        </div>

        <div class="total">
            <h3>Total: â‚¹<span id="totalAmount">0</span></h3>
        </div>

        <form " id="checkoutForm">
